<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="match_parent"
    android:id="@+id/dialog_orders_container"
    android:background="@color/colorPrimaryLight"
    >

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_orders_title"
        android:padding="5dp"
        android:gravity="right"
        android:background="@color/hardGray"
        android:textColor="#fff"
        android:text="مشاهده فاکتور"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:id="@+id/item_order_container"
        android:background="#fff"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_total"
            android:text="مجموع"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_price"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="قیمت واحد"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="2dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:id="@+id/item_order_count"
            android:text="تعداد"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:id="@+id/item_order_product"
            android:textSize="13sp"
            android:text="محصول"
            android:gravity="right"
            android:paddingRight="3dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:id="@+id/item_order_row"
            android:text="ردیف"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_orders_list"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/dialog_orders_discount"
            android:padding="5dp"
            android:text="تخفیف : 15000 تومان"
            android:gravity="center"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/dialog_orders_shipping"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="هزینه حمل و نقل: 20000 تومان"
            />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="بازگشت"
        android:textColor="#fff"
        android:id="@+id/dialog_orders_back"
        />

</LinearLayout>