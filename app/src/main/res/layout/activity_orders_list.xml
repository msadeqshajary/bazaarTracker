<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical">

    <include layout="@layout/search_bar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/item_factors_container"
        android:background="#FFF"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وضعیت"
            android:layout_marginLeft="2dp"
            android:id="@+id/item_factors_status"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:id="@+id/item_factors_time"
            android:text="ساعت"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/item_factors_total"
            android:text="مجموع"
            android:layout_weight="2"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/item_factors_customer"
            android:text="مشتری"
            android:layout_weight="3"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/item_factors_date"
            android:text="تاریخ"
            android:layout_weight="2"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/item_factors_row"
            android:text="ردیف"
            android:layout_weight="1"
            android:textSize="12sp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orders_list"
        />

    </LinearLayout>
