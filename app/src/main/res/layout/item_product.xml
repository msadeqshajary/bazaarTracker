<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/list_product_container"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_product_delete"
        android:src="@drawable/ic_delete"
        android:layout_marginRight="5dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_product_edit"
        android:src="@drawable/ic_edit"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/list_product_price"
        android:text="25000"
        android:lines="1"
        android:layout_weight="2"
        android:padding="1dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="محصول شماره 1"
        android:id="@+id/list_product_product"
        android:layout_weight="4"
        android:padding="1dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="25"
        android:padding="1dp"
        android:id="@+id/list_product_row"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        />

</LinearLayout>