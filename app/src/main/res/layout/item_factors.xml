<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/item_factors_container"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_checked"
        android:layout_marginLeft="2dp"
        android:id="@+id/item_factors_status"
        android:layout_gravity="center"
        android:padding="3dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="3dp"
        android:id="@+id/item_factors_print"
        android:src="@drawable/ic_printer"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/item_factors_total"
        android:text="225000"
        android:layout_weight="2"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/item_factors_customer"
        android:text="فروشگاه رضوان"
        android:layout_weight="3"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/item_factors_date"
        android:text="27/11"
        android:layout_weight="2"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/item_factors_row"
        android:text="22"
        android:layout_weight="1"
        />

</LinearLayout>