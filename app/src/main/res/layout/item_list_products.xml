<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/list_product_container"
    >

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_product_price"
        android:lines="1"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/inputColor"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:background="@drawable/bg_inside"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:enabled="true"
        android:textSize="15sp"
        />


    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_product_count"
        android:gravity="center"
        android:padding="2dp"
        android:inputType="number"
        android:textColor="@color/inputColor"
        android:background="@drawable/bg_inside"
        android:textSize="15sp"
        android:nextFocusForward="@+id/list_product_price"
        android:nextFocusLeft="@+id/list_product_price"
        android:nextFocusRight="@+id/list_product_price"
        android:nextFocusDown="@+id/list_product_price"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="محصول شماره 1"
        android:id="@+id/list_product_product"
        android:layout_weight="1"
        android:textSize="13sp"
        android:textColor="@color/delta"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|right"
        />

</LinearLayout>